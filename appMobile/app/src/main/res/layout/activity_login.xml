<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moldura_pokedex"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/loginWindow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/login_window"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:textSize="28sp"
            android:textColor="#413931"
            android:fontFamily="@font/pokemon_gb"
            android:shadowColor="#bd9c5a"
            android:shadowDx="2"
            android:shadowDy="2"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp" />

        <EditText
            android:id="@+id/editTextNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NOME"
            android:fontFamily="@font/pokemon_gb"
            android:textColor="#000000"
            android:background="@drawable/input_field"
            android:padding="10dp"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"/>

        <EditText
            android:id="@+id/editTextSenha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SENHA"
            android:fontFamily="@font/pokemonunowngb"
            android:textColor="#000000"
            android:background="@drawable/input_field"
            android:padding="10dp"
            android:textSize="20sp"
            android:inputType="textPassword"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTRAR"
            android:textSize="20sp"
            android:fontFamily="@font/pokemon_gb"
            android:background="@drawable/pixel_button"
            android:layout_gravity="center_horizontal"
            android:onClick="validarLogin" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>